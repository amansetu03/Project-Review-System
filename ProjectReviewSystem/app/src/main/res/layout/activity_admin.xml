<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Faculty">


    <!-- Notification Icon -->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/bell"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp" />

    <!-- Dashboard Section -->
    <LinearLayout
        android:id="@+id/Dashboard_Researcher"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/block_background">

        <!-- In Review Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Research"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/review"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Review"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" />

            <EditText
                android:id="@+id/Total_edit"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/block_background"
                android:backgroundTint="#D3D3D3"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <!-- Total Projects Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Total"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/total"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Projects"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" />

            <EditText
                android:id="@+id/Total_alloted"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/block_background"
                android:backgroundTint="#D3D3D3"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <!-- Pending Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Pending"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/pending"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" />

            <EditText
                android:id="@+id/Total_pending"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/block_background"
                android:backgroundTint="#D3D3D3"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <!-- Done Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Done"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/done"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" />

            <EditText
                android:id="@+id/Total_done"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/block_background"
                android:backgroundTint="#D3D3D3"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/faculty_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:background="@drawable/block_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/faculty_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/block_background">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/done"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="@color/colorOnBackground"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designer"
                    android:textColor="@color/colorOnBackground"
                    android:textSize="18sp"
                    android:layout_marginStart="-75dp"
                    android:layout_marginTop="20dp" />

                <Button
                    android:id="@+id/s1"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Send"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faculty_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/done"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/colorOnBackground"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designer"
                android:textColor="@color/colorOnBackground"
                android:textSize="18sp"
                android:layout_marginStart="-75dp"
                android:layout_marginTop="40dp" />

            <Button
                android:id="@+id/s2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Send"
                android:backgroundTint="@color/textColorPrimary"
                android:layout_marginStart="65dp"
                android:layout_marginTop="30dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/faculty_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/done"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorOnBackground"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designer"
                    android:textColor="@color/colorOnBackground"
                    android:textSize="18sp"
                    android:layout_marginStart="-75dp"
                    android:layout_marginTop="40dp" />

                <Button
                    android:id="@+id/s3"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Send"
                    android:backgroundTint="@color/colorWarning"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="30dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/faculty_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/done"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="@color/colorOnBackground"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designer"
                    android:textColor="@color/colorOnBackground"
                    android:textSize="18sp"
                    android:layout_marginStart="-85dp"
                    android:layout_marginTop="40dp" />

                <Button
                    android:id="@+id/s4"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Send"
                    android:backgroundTint="@color/colorWarning"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="30dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/faculty_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/done"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="@color/colorOnBackground"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designer"
                    android:textColor="@color/colorOnBackground"
                    android:textSize="18sp"
                    android:layout_marginStart="-75dp"
                    android:layout_marginTop="40dp" />

                <Button
                    android:id="@+id/s5"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Send"
                    android:backgroundTint="@color/colorWarning"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="30dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/faculty_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/done"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="@color/colorOnBackground"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designer"
                    android:textColor="@color/colorOnBackground"
                    android:textSize="18sp"
                    android:layout_marginStart="-75dp"
                    android:layout_marginTop="40dp" />

                <Button
                    android:id="@+id/s6"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Send"
                    android:backgroundTint="@color/colorWarning"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="30dp" />
            </LinearLayout>





            </LinearLayout>
    </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
