                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/done" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Jane Smith"
                        android:textColor="@color/colorOnBackground"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/designation2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-122dp"
                        android:layout_marginTop="28dp"
                        android:text="Designer"
                        android:textColor="@color/colorOnBackground"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/department2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-122dp"
                        android:layout_marginTop="55dp"
                        android:text="Department"
                        android:textColor="@color/colorOnBackground"
                        android:textSize="16dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/s2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/button_background"

                    android:text="Send"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/faculty_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageView3"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/circle_background"
                            android:scaleType="centerCrop"
                            android:src="@drawable/done" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Alice Johnson"
                            android:textColor="@color/colorOnBackground"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/designation3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-122dp"
                            android:layout_marginTop="25dp"
                            android:text="Designer"
                            android:textColor="@color/colorOnBackground"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/department3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-122dp"
                            android:layout_marginTop="50dp"
                            android:text="Department"
                            android:textColor="@color/colorOnBackground"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/s3"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="20dp"
                        android:text="Send"
                        android:background="@drawable/button_background"
                    android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/faculty_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView4"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/done" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Ana"
                        android:textColor="@color/colorOnBackground"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/designation4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-122dp"
                        android:layout_marginTop="25dp"
                        android:text="Analyst"
                        android:textColor="@color/colorOnBackground"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/department4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-122dp"
                        android:layout_marginTop="50dp"
                        android:text="Department"
                        android:textColor="@color/colorOnBackground"
                        android:textSize="16sp" />
                </LinearLayout>
                <Button
                    android:id="@+id/s4"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:text="Send"
                    android:background="@drawable/button_background"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/faculty_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageView5"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/circle_background"
                            android:scaleType="centerCrop"
                            android:src="@drawable/done" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Charlie Davis"
                            android:textColor="@color/colorOnBackground"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/designation5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-122dp"
                            android:layout_marginTop="30dp"
                            android:text="Designer"
                            android:textColor="@color/colorOnBackground"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/department5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-122dp"
                            android:layout_marginTop="60dp"
                            android:text="Department"
                            android:textColor="@color/colorOnBackground"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/s5"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="20dp"
                        android:text="Send"
                        android:background="@drawable/button_background"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/faculty_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView6"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/done" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Emily White"
                        android:textColor="@color/colorOnBackground"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/designation6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-122dp"
                        android:layout_marginTop="30dp"
                        android:text="Designer"
                        android:textColor="@color/colorOnBackground"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/department6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-122dp"
                        android:layout_marginTop="60dp"
                        android:text="Department"
                        android:textColor="@color/colorOnBackground"
                        android:textSize="16sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/s6"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/button_background"
                    android:text="Send"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>