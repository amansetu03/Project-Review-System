<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Designation">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/text_designation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Designation"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/designation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:padding="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:hint="Enter Your Designation"
        android:textColorHint="@color/white"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/text_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Depratment"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:padding="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:hint="Enter Your Department"
        android:textColorHint="@color/white"
        tools:ignore="HardcodedText" />


    <ImageView
        android:id="@+id/bottom_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:layout_marginTop="150dp"
        />
    <Button
        android:id="@+id/save_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:text="Save"
        android:textSize="15dp"
        android:textAlignment="textStart"
        android:drawableEnd="@drawable/arrow"
        android:textColor="@color/black"
        android:layout_marginTop="-126dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        tools:ignore="RtlCompat" />


</LinearLayout>